<div class="container-fluid">
	<% if insta_authorized? %>
		<%= form_tag(search_tag_path) do %>
			<%= text_field_tag :search_term %>
			<%= submit_tag("Search Tags") %>
		<% end %>

	<% else %>
			<%= link_to("Authorize", "/oauth/connect") %>
	<% end %>
	
	<% if @recent_tags %>
		<%= @recent_tags.each do |tag| %>
			<%= tag.caption.username %>
		<% end %>
	<% end %>
</div>